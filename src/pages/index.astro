---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout>
  <Hero />
  <div class="mt-50px font-mono text-lg">
    <div>
      <a class="text-xl underline ~cp" href="/blog">Blogs:</a>
      <span class="font-sans">Share the knowledge gained from learning</span>
    </div>
    <div class="mt-10px">
      <a href="/talk" class="text-xl underline ~cp">Talks:</a>
      <span class="font-sans">Tell me about my recent experiences</span>
    </div>
    <div class="mt-10px">
      <a href="/project" class="text-xl underline ~cp">Projects:</a>
      <span class="font-sans">List the projects I have developed</span>
    </div>
  </div>
  <div class="mt-50px">
    <p class="text-xl mb-5px">Find me on:</p>
    <div class="flex gap-x-20px">
      <a
        class="flex items-center text-lg border-b border-gray-300 hover:border-dark-300 transition-200 ~cp"
        href="https://github.com/taoyanya"
        target="_blank"
      >
        <i class="i-ri-github-fill"></i>
        <div class="font-mono ml-5px">Github</div>
      </a>
      <a
        class="flex items-center text-lg border-b border-gray-300 hover:border-dark-300 transition-200 ~cp"
        href="https://space.bilibili.com/334948417?spm_id_from=333.1007.0.0"
        target="_blank"
      >
        <i class="i-ri-bilibili-fill"></i>
        <div class="font-mono ml-5px">Bilibili</div>
      </a>
    </div>
  </div>
</Layout>
