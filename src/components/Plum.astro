<canvas class="mt-20px"></canvas>

<script>
  const screenSize = {
    width: window.innerWidth,
    height: window.innerHeight,
  };

  const canvas = document.querySelector("canvas")!;
  // canvas.setAttribute("width", `${screenSize.width}px`);
  // canvas.setAttribute("height", `${screenSize.height}px`);

  const ctx = canvas.getContext("2d")!;
  ctx.beginPath();
  for (let i = 0; i < 6; i++) {
    for (let j = 0; j < 60; j++) {
      ctx.fillStyle =
        "rgb(" +
        Math.floor(255 - 42.5 * i) +
        "," +
        Math.floor(255 - 10 * j) +
        ",0)";
      ctx.fillRect(j * 25, i * 25, 25, 25);
    }
  }
</script>
